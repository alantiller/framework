{
    "name": "alantiller/framework",
    "description": "A lightweight PHP framework for creating quick, simple and secure RESTful APIs.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AlanTiller\\Framework\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.6",
        "catfan/medoo": "^2.1",
        "league/route": "^6.2",
        "league/container": "^4.2",
        "laminas/laminas-diactoros": "^3.5",
        "laminas/laminas-httphandlerrunner": "^2.11",
        "phpmailer/phpmailer": "^6.9",
        "psr/log": "^1.1"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^2.36"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
